{
  "compilerOptions": {
    // Target latest stable JS version for Node
    "target": "ES2020",

    // Node.js compatible module system
    "module": "commonjs",

    // Root folder for TS source files
    "rootDir": "src",

    // Output folder for compiled JS
    "outDir": "dist",

    // Enable strict type-checking
    "strict": true,

    // Allow default imports from CommonJS modules
    "esModuleInterop": true,

    // Enforce consistent casing in imports
    "forceConsistentCasingInFileNames": true,

    // Skip type checking of declaration files for faster build
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
